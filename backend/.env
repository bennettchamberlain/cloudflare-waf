# Cloudflare WAF Manager - Backend Configuration

# Development/Production Mode
DEBUG=True

# Database Configuration (for production)
DATABASE_URL=postgresql://user:password@localhost:5432/cloudflare_waf_db

# Redis Configuration (for session storage)
REDIS_URL=redis://localhost:6379/0

# JWT Secret Key (generate a random secret in production)
SECRET_KEY=your-secret-key-here

# Cloudflare API Configuration (optional default values)
CLOUDFLARE_API_BASE_URL=https://api.cloudflare.com/client/v4

# CORS Origins (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Log Level
LOG_LEVEL=INFO